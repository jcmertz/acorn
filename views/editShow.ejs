<!DOCTYPE html>
<html lang='en'>
<head>
  <meta charset='utf-8' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.14.0/jquery-ui.min.js"></script>
  <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js'></script>
  <link rel="stylesheet" href="../../styles/styles.css"/>
</head>
<body class="p-2">
  
  <div class="d-flex justify-content-between mb-4">
    <a class="btn btn-primary" href="/logout"><h3>LOGOUT</h3></a>
    <a class="btn btn-primary" href="javascript:history.back()"><h3>BACK</h3></a>
  </div>
  
  <div class="row">
    <!-- Left Column: Show Details -->
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title">Show Details</h1>
          <p class="card-text">Band: <strong><%= show.contactBand.bandName %></strong></p>
          <p class="card-text">Date: <strong><%= show.showDate.toLocaleDateString() %></strong></p>
          <p class="card-text">Show Status:</p>
          <form id="form" action="/admin/setShowStatus" method="get">
            <input type="hidden" name="id" value="<%= show._id %>"/>
            <select id="status" name="showStatus" class="form-select" <%if (!isAdmin) { %> disabled <% } %> onchange='if(this.value != "<%= show.showStatus %>") { this.form.submit(); }'>
              <option value="-1">Rejected/Canceled</option>
              <option value="0">Submitted, Not Responded To</option>
              <option value="1">In Negotiation</option>
              <option value="2">Confirmed</option>
            </select>
          </form>
        </div>
      </div>
    </div>
    
    <!-- Right Column: Messaging Tool -->
    <div class="col-md-6">
      <h2>Messages</h2>
      <div id="messageWindow" class="overflow-auto" style="max-height: 400px;">
        
        <!-- Example message from the partials/messages -->
        <!-- Repeat this block for each message -->
        <!-- <div class="card mb-2">
          <div class="card-body">
            <p class="card-text">
              <strong>Sender Name:</strong> This is the content of the message. Each message can be styled like this to look like a chat bubble.
            </p>
            <small class="text-muted">Timestamp: 2023-09-25 12:00</small>
          </div>
        </div> -->
        <!-- End of message block -->
        
        <!-- Include your dynamic message partials -->
        <%- include('partials/messages') %>
      </div>
    </div>
  </div>
  
  <script>
    // Set the selected status in the dropdown
    $("#status").find('option[value="<%= show.showStatus %>"]').attr('selected', 'selected');
  </script>
  
</body>
</html>
