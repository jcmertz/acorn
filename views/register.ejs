<h1>Register</h1>
<form action="/register" method="post">
    
    <section>
        <label for="username">Username</label>
        <input id="username" name="username" type="text" autocomplete="username" required>
    </section>
    <section>
        <label for="new-password">Password</label>
        <input id="new-password" name="password" type="password" autocomplete="new-password" required>
    </section>
    <section>
        <label for="bandName">Band Name</label>
        <input id="bandName" name="bandName" type="text" required>
    </section>
    <section>
        <label for="contactEmail">Contact Email</label>
        <input id="contactEmail" name="contactEmail" type="email" required>
    </section>
    <section>
        <label for="homeTown">Where is your band based?</label>
        <input id="homeTown" name="homeTown" type="text">
    </section>
    <section>
        <label for="genre">What genre do you identify with?</label>
        <input id="genre" name="genre" type="text">
    </section>
    <section>
        <label for="instagram">Instagram</label>
        <input id="instagram" name="instagram" type="text" value="@">
    </section>
    <button type="submit">Register</button>
    <%if (invalidUsername) { %>
        <script>
            alert("This Username is Already Taken");
        </script>
        <%}%>
    </form>